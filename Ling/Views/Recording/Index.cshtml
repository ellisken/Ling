@model IEnumerable<Ling.Models.Recording>

@{
    ViewData["Title"] = "Explore Lings";
}
<h1 class="text-center">Explore Lings</h1>
<div class="row" style="margin: 30px 0">
    <div class="col-sm-10">
        <div id="waveform">
        </div>
    </div>
    <div class="col-sm-2 align-middle">
        <div class="row"></div>
        <div class="row">
            <button class="btn btn-lg btn-danger btn-block" id="playPause">
                <span id="play">
                    <i class="fa fa-play"></i>
                    Play
                </span>

                <span id="pause" style="display: none">
                    <i class="fa fa-pause"></i>
                    Pause
                </span>
            </button>
        </div>
        <div class="row"></div>
    </div>
</div>
<div class="list-group" id="playlist">
    @foreach (var rec in Model)
    {
    <a href="@rec.URI" class="list-group-item">
        <i class="glyphicon glyphicon-play"></i>
        <span class="text-left">@rec.Language.EnglishName</span><span class="float-right text-truncate list-transcription">@rec.Transcription</span>
    </a>
    }
</div>
<script src="https://unpkg.com/wavesurfer.js/dist/wavesurfer.min.js"></script>
<script src="~/js/recordings.min.js"></script>